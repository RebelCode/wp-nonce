        "dhii/factory-interface": "dev-develop",
        "dhii/block-interface": "dev-task/initial-interface"
    },
    "require-dev": {
        "phpunit/phpunit": "^4.8",
        "ptrofimov/xpmock": "^1.1",
        "dhii/php-cs-fixer-config": "dev-master",
        "codeclimate/php-test-reporter": "<=0.3.2",
        "10up/wp_mock": "^0.1.1"
    },
    "autoload": {
        "psr-4": {
            "RebelCode\\WordPress\\Nonce\\": "src"
